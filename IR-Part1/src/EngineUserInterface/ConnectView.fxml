<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EngineUserInterface.ConnectController">
    <Label fx:id="lbl_pathCorpus" layoutX="44.0" layoutY="41.0" prefHeight="29.0" prefWidth="365.0" text="Please Enter path to Corpus:">
        <font>
            <Font name="Levenim MT" size="18.0" />
        </font>
    </Label>
    <Label fx:id="lbl_pathPosting" layoutX="44.0" layoutY="136.0" text="Please choose directory for Postings:">
        <font>
            <Font name="Levenim MT" size="18.0" />
        </font>
    </Label>
    <TextField fx:id="tf_pathCorpus" layoutX="44.0" layoutY="80.0" prefHeight="39.0" prefWidth="349.0">
        <padding>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
        </padding>
    </TextField>
    <TextField fx:id="tf_pathPosting" layoutX="44.0" layoutY="180.0" prefHeight="39.0" prefWidth="349.0">
        <padding>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
        </padding>
    </TextField>
    <Button fx:id="btn_connect" layoutX="210.0" layoutY="236.0" mnemonicParsing="false" onAction="#pressConnect" text="Connect" />
    <Button fx:id="btn_browseCorpus" layoutX="409.0" layoutY="80.0" mnemonicParsing="false" onAction="#browseCorpus" text="Browse" />
    <Button fx:id="btn_browsePosting" layoutX="409.0" layoutY="180.0" mnemonicParsing="false" onAction="#browsePosting" text="Browse" />
</AnchorPane>
